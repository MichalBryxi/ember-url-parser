<div class="row">
  <div class="col-xs-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <a href="https://en.wikipedia.org/wiki/Communications_protocol">
          protocol
        </a>
      </div>
      <div class="panel-body">
        {{protocol}}//
      </div>
    </div>
  </div>

  <div class="col-xs-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <a href="https://en.wikipedia.org/wiki/Hostname">
          host
        </a>
      </div>
      <div class="panel-body">
        {{hostname}}
      </div>
    </div>
  </div>

  <div class="col-xs-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <a href="https://en.wikipedia.org/wiki/Port_(computer_networking)">
          port
        </a>
      </div>
      <div class="panel-body">
        :{{port}}
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <a href="https://en.wikipedia.org/wiki/Uniform_Resource_Locator">
          path
        </a>
      </div>
      <div class="panel-body">
        {{pathname}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <a href="https://en.wikipedia.org/wiki/Fragment_identifier">
          hash
        </a>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-6">
            <div class="panel panel-warning">
              <div class="panel-heading">
                <a href="http://guides.emberjs.com/v1.10.0/routing/defining-your-routes/">
                  route
                </a>
              </div>
              <div class="panel-body">
                {{route}}
              </div>
            </div>
          </div>

          <div class="col-xs-6">
            <div class="panel panel-warning">
              <div class="panel-heading">
                <a href="http://guides.emberjs.com/v1.10.0/routing/query-params/">
                  query params
                </a>
              </div>
              <div class="panel-body">
                <div class="question-mark">
                  ?
                </div>
                <dl class="dl-horizontal">
                  {{#each queryParams as |param|}}
                  <dt>{{param.key}} =</dt>
                  <dd>{{param.value}} &amp;</dd>
                  {{/each}}
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
