<div class="row">
  <div class="col-xs-12">
    <form class="form-horizontal">
      <div class="input-group">
        <span class="input-group-addon">URL:</span>
        {{input class="form-control" id="url" placeholder="http://..." value=model.value}}
        <span class="input-group-btn">
          <button class="btn btn-primary" {{action "saveUrl"}}>
            {{fa-icon "plus-square"}}
            Save
          </button>
        </span>
      </div>
    </form>
  </div>
</div>

<hr />

<h3>URL parts:</h3>

<div class="row">
  <div class="col-xs-12">
    {{ember-url-visualizer url=model.value}}
  </div>
</div>
